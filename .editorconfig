# Top-most EditorConfig file
root = true

# ------------------------
# Default settings (applies to all files)
# ------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

# ------------------------
# Markdown files
# ------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# ------------------------
# YAML / JSON
# ------------------------
[*.{yml,yaml,json,jsonc}]
indent_style = space
indent_size = 2

# ------------------------
# Makefile
# ------------------------
[Makefile]
indent_style = tab

# ------------------------
# Shell scripts
# ------------------------
[*.sh]
end_of_line = lf
