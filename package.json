{
  "name": "trello-node-express-ts",
  "version": "1.0.0",
  "description": "The Trello clone backend built with Node.js - Express.JS and TypeScript",
  "license": "ISC",
  "author": "Khang Nguyen",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "check:all": "npm run typecheck && npm run lint && npm run format:check",
    "fix:all": "npm run lint:fix && npm run format",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "joi": "^18.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.5.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/http-status-codes": "^1.2.0",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "keywords": [
    "nodejs",
    "express.js",
    "typescript"
  ],
  "homepage": "https://github.com/ngkhang/trello-node-express-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngkhang/trello-node-express-ts.git"
  }
}
