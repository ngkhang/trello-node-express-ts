{
  "name": "trello-node-express-ts",
  "version": "1.0.0",
  "description": "The Trello clone backend built with Node.js - Express.JS and TypeScript",
  "license": "ISC",
  "author": "Khang Nguyen",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/http-status-codes": "^1.2.0",
    "@types/node": "^25.1.0",
    "rimraf": "^6.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "nodejs",
    "express.js",
    "typescript"
  ],
  "homepage": "https://github.com/ngkhang/trello-node-express-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngkhang/trello-node-express-ts.git"
  }
}
